<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="GameEngine.Core.VisualTests.MainWindow"
        Title="MainWindow" Height="690" Width="760">
    <Grid x:Name="MainGrid">
        <Button Content="Find Path" Name="FindPath" Width="75" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,5,0" Click="FindPath_Click" />
        <RadioButton GroupName="NodeType" Content="Pick Start" HorizontalAlignment="Right" Margin="0,65,5,0" Height="25" Width="75" VerticalAlignment="Top" IsChecked="True" />
        <RadioButton GroupName="NodeType" Content="Pick End" HorizontalAlignment="Right" Margin="0,95,5,0" Height="25" Width="75" VerticalAlignment="Top"/>
        <RadioButton GroupName="NodeType" Content="Pick Wall" HorizontalAlignment="Right" Margin="0,125,5,0" Height="25" Width="75" VerticalAlignment="Top"/>
        <Button Content="Clear All" Name="ClearAll" Width="75" Height="25" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,35,5,0" Click="ClearAll_Click" />
    </Grid>
</Window>
